{
  "name": "gopro-desktop-app",
  "version": "1.0.0",
  "description": "GoPro Multi-Camera Desktop Application",
  "main": "electron/main.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "electron": "electron .",
    "electron-dev": "concurrently \"BROWSER=none npm start\" \"wait-on http://localhost:3000 && ELECTRON_START_URL=http://localhost:3000 electron .\"",
    "package": "electron-builder"
  },
  "build": {
    "appId": "com.gopro.desktopapp",
    "productName": "GoPro Control",
    "extends": null,
    "files": [
      "build/**/*",
      "electron/**/*",
      "!node_modules"
    ],
    "extraResources": [
      {
        "from": "../backend/dist/gopro-backend",
        "to": "backend/dist/gopro-backend",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.photography",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "author": "GoPro Control Team",
  "homepage": "./",
  "dependencies": {
    "axios": "^1.6.5",
    "hls.js": "^1.6.15",
    "mpegts.js": "^1.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
